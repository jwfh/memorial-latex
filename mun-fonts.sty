	Path=/usr/local/share/fonts/OTF/,
	Ligatures=TeX,
	Scale=1.075,
	LetterSpace=0,
	BoldFont={AdobeGaramondProSemibold.otf},
	ItalicFont={AdobeGaramondProItalic.otf},
	BoldItalicFont={GaramondPremrPro-SemiboldItalic.otf}
